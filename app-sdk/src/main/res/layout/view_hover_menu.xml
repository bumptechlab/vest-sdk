<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_layout"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:background="@drawable/menu_expanded_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/menu_shrinked"/>

    <View
        android:id="@+id/menu_placeholder"
        android:layout_width="10dp"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/menu_refresh_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/menu_refresh"/>

    <ImageView
        android:id="@+id/menu_close_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/menu_close"/>
</LinearLayout>